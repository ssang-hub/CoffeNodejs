<section style="background-color: #8cd5ff85">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12">
                <div class="card card-stepper text-black" style="border-radius: 16px">
                    <div class="card-body p-5">
                        <div class="d-flex justify-content-between align-items-center mb-5">
                            <div>
                                <h5 class="mb-0">
                                    ĐƠN HÀNG
                                    <span class="text-primary font-weight-bold">#<%=orders.id%></span>
                                </h5>
                            </div>
                            <div class="text-end">
                                <p class="mb-0">Ngày Đặt Hàng: <span><%=orders.date%></span></p>
                                <input type="hidden" name="status" class="mb-0 status-order" value="<%=orders.status%>" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="horizontal-timeline">
                                    <ul class="list-inline items d-flex justify-content-between">
                                        <li class="list-inline-item items-list step-0">
                                            <div class="d-lg-flex align-items-center status">
                                                <i class="fas fa-clipboard-list fa-3x me-lg-4 mb-3 mb-lg-0"></i>
                                                <div class="ml-3">
                                                    <p class="fw-bold mb-0">Chờ Xác nhận</p>
                                                </div>
                                            </div>
                                        </li>

                                        <li class="list-inline-item items-list step-1">
                                            <div class="d-lg-flex align-items-center status">
                                                <i class="fas fa-box-open fa-3x me-lg-4 mb-3 mb-lg-0"></i>
                                                <div class="ml-3">
                                                    <p class="fw-bold mb-0">Chuẩn bị sản phẩm</p>
                                                </div>
                                            </div>
                                        </li>

                                        <li class="list-inline-item items-list step-2">
                                            <div class="d-lg-flex align-items-center status">
                                                <i class="fas fa-shipping-fast fa-3x me-lg-4 mb-3 mb-lg-0"></i>
                                                <div class="ml-3">
                                                    <p class="fw-bold mb-0">Đang giao hàng</p>
                                                </div>
                                            </div>
                                        </li>

                                        <li class="list-inline-item items-list status step-3 text-end" style="margin-right: 8px">
                                            <div class="d-lg-flex align-items-center">
                                                <i class="fas fa-home fa-3x me-lg-4 mb-3 mb-lg-0"></i>
                                                <div class="ml-3">
                                                    <p class="fw-bold mb-0">Giao hàng thành công</p>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
