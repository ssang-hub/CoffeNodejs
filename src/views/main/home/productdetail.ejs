<%- include('../header/header') -%>
<body>
    <!-- navbar -->
    <div class="nav-container" style="z-index: 1"><%- include('../navbar/navbar') -%></div>

    <!-- slider -->
    <div class="slider-menu" style="height: 500px">
        <img src="/images/<%=name%>.jpg" alt="" style="width: 100%; height: 100%" />
        <div class="black-background"></div>
    </div>

    <!-- content -->
    <div class="content-website" style="margin-top: 500px">
        <!-- product -->
        <div class="product-container container">
            <div class="row">
                <div class="col-xl-72 col-lg-4 col-md-6 col-sm-12">
                    <div class="image-product-detail">
                        <img src="<%=product.image %>" alt="" style="width: 100%" />
                    </div>
                </div>
                <div class="col-xl-96 col-lg-6 col-md-8 col-sm-12">
                    <div class="content-product-detail">
                        <h2><%=product.name %></h2>
                        <h1 style="color: green"><%=product.price %>đ</h1>
                        <p>Mã sản phẩm: <%=product.id %></p>
                        <hr />
                        <div class="d-flex align-items-center">
                            <h4 style="margin-right: 30px">Số lượng</h4>
                            <div class="number d-flex">
                                <button
                                    class="minus-number p-2 btn btn-outline-danger"
                                    onclick="minusQuantity()"
                                    style="position: relative; left: 0; transform: translateX(0)"
                                >
                                    <i class="fa-solid fa-minus"></i>
                                </button>
                                <form action="/addproduct" method="post" id="addproducttocart">
                                    <input
                                        type="text"
                                        name="quantity"
                                        class="quantity-product p-2"
                                        id="quantity-input"
                                        style="width: 2.9rem"
                                        value="1"
                                    />
                                    <input type="hidden" name="productid" id="product-id" />
                                </form>
                                <button class="plus-number p-2 btn btn-outline-success" onclick="plusQuantity()">
                                    <i class="fa-solid fa-plus"></i>
                                </button>
                            </div>

                            <button type="submit" class="btn btn-primary" form="addproducttocart">Thêm vào rỏ</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- product note -->
    </div>
    <script src="/javascript/siteEvent.js"></script>
    <%- include('../../bootstrapScript/script') -%> <%- include('../footer/footer') -%>
</body>
